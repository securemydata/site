{% extends 'base.html.twig' %}

{% block bodyheader %}
    <h1>
        Passwords view history
    </h1>

{% endblock %}
{% block body %}

<script>



    $(document).ready(function() {
        $('#example').DataTable( {
            "processing": true,
            "serverSide": true,
            "responsive": true,
            //"scrollX": true,
            "search": {
                "search": "{% if q is defined %}{{ q }}{% endif %}"
            },
            "lengthMenu": [[25, 50,100 , -1], [25, 50, 100, "All"]],
            "order": [[ 2, "desc" ]],
            "ajax": "/histodata",
            "columns": [
                { "data": "label" },
                { "data": "ip" },
                { "data": "DateInsert" }
            ],

            columnDefs: [
                { className: "",
                    "targets": [ 0 ],
                    render: function(data, type, full, meta){
                        //data = '<button type="submit" class="btn btn-info pull-right" onclick="alert(\'' + data + '\')">Edit</button>';
                        data = '<b>'+data+'</b>';


                        return data;
                    } }
                ]

        } );
    } );
</script>

<div class="row">
    <div class="col-xs-10  col-md-offset-1">
        <div class="box">
            <div class="box-header">
                <h3 class="box-title">Password view history</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body">

                <div class="dataTables_wrapper form-inline dt-bootstrap">
                    <div class="row">
                        <div class="col-sm-12">

                    <table id="example" class="table table-bordered table-hover dataTable" role="grid" >

                        <thead>
                        <tr role="row">
                            <th>Label</th>
                            <th>IP</th>

                            <th>Date Insert</th>
                            <th></th>
                        </tr>
                        </thead>
                        <tfoot>

                        </tfoot>
                    </table>
                        </div>

                </div>
                </div>
            </div>
        </div>
    </div>
</div>



{% endblock %}


