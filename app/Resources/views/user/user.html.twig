{% extends 'base.html.twig' %}

{% block bodyheader %}
    <section class="content-header">
    <h1>
        Gestion de mon compte
    </h1>
    </section>
{% endblock %}
{% block body %}
<div class="col-md-6">
<div class="box box-primary">
    <div class="box-header with-border">
        <h3 class="box-title">Modifier mes informations</h3>
    </div>
    <!-- /.box-header -->
    <!-- form start -->
    <form role="form" method="POST" id="modifyuser" name="modifyuser" action="modifyuser">
        <div class="box-body">
            <div class="form-group">
                <label for="exampleInputEmail1">Email</label>
                <div class="input-group">
                    <span class="input-group-addon">
                        <i class="fa fa-envelope"></i>
                    </span>
                <input class="form-control" id="email"  name="email" type="text" value="{{ email }}"  disabled>
                </div>
            </div>
            <div class="form-group">
                <label for="exampleInputEmail1">First name</label>
                <input class="form-control" id="firstName"  name="firstName" type="text" value="{{ firstName }}">
            </div>
            <div class="form-group">
                <label for="InputP1">Last name</label>
                <input class="form-control" id="lastName"  name="lastName" type="text" value="{{ lastName }}">
            </div>


            <div class="form-group">
                <label for="InputP2">Passphrase</label>
                <input class="form-control" id="passphrase" name="passphrase" type="password" >
            </div>
            <div class="form-group  has-feedback">
                <label>Change password ?</label>
                <input class="form-control" id="password" name="password" type="password">
                <span class="glyphicon glyphicon-lock form-control-feedback"></span>
            </div>
        </div>
        <!-- /.box-body -->

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
</div>

{% endblock %}


